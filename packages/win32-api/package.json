{
  "name": "win32-api",
  "author": "waiting",
  "version": "9.0.0",
  "description": "FFI definitions of windows win32 api for node-ffi",
  "keywords": [
    "windows",
    "win32",
    "api",
    "kernel32",
    "user32",
    "comctl32",
    "ffi",
    "typescript",
    "ts"
  ],
  "bin": {},
  "browser": "",
  "es2015": "./dist/index.esm.js",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/waitingsong/node-win32-api/issues"
  },
  "homepage": "https://waitingsong.github.io/node-win32-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/node-win32-api.git"
  },
  "license": "MIT",
  "dependencies": {
    "@types/ffi-napi": "*",
    "@types/ref-napi": "^1.4.0",
    "ffi-napi": "^2.4.5",
    "ref-napi": "^1.4.1",
    "win32-def": "^9.0.0"
  },
  "devDependencies": {
    "@types/ref-struct-di": "^1.1.0",
    "@waiting/shared-core": "3",
    "cross-env": "6",
    "ref-struct-di": "^1.1.0",
    "rxjs": "^6.5.2"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "bin/*.js",
    "dist"
  ],
  "scripts": {
    "build": "npm run tsc && npm run rp",
    "clean": "rm -rf dist/* .vscode/.tsbuildinfo .vscode/.tsbuildinfo.* ",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json nyc mocha",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha --opts test/mocha.opts",
    "test:browser": "cd .config && npm run browser && cd ..",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  },
  "os": [
    "win32"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".githooks",
      "dist",
      "node_modules*",
      "src/bin",
      "src/domain.ts",
      "src/interface.ts",
      "test*",
      "**/node_modules*",
      "**/*.d.ts",
      "**/*.js"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "all": true
  }
}
